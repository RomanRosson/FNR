{
  "name": "Event",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Event name"
    },
    "description": {
      "type": "string",
      "description": "Event details"
    },
    "event_type": {
      "type": "string",
      "enum": [
        "fnr",
        "weekend_ride",
        "meetup",
        "track_day",
        "charity_ride",
        "sponsored_event"
      ],
      "default": "fnr",
      "description": "Type of riding event"
    },
    "date": {
      "type": "string",
      "format": "datetime",
      "description": "Event date and time"
    },
    "meeting_point": {
      "type": "string",
      "description": "Where riders meet"
    },
    "destination": {
      "type": "string",
      "description": "Where the ride goes"
    },
    "location_lat": {
      "type": "number",
      "description": "Meeting point latitude"
    },
    "location_lng": {
      "type": "number",
      "description": "Meeting point longitude"
    },
    "max_participants": {
      "type": "number",
      "description": "Maximum number of riders"
    },
    "difficulty_level": {
      "type": "string",
      "enum": [
        "beginner",
        "intermediate",
        "advanced"
      ],
      "default": "beginner",
      "description": "Skill level required"
    },
    "distance_km": {
      "type": "number",
      "description": "Approximate ride distance"
    },
    "organizer_id": {
      "type": "string",
      "description": "User ID of the organizer"
    },
    "attendees": {
      "type": "array",
      "description": "List of attending riders",
      "items": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string"
          },
          "rsvp_date": {
            "type": "string",
            "format": "datetime"
          },
          "bike_bringing": {
            "type": "string"
          }
        }
      }
    },
    "is_sponsored": {
      "type": "boolean",
      "default": false,
      "description": "Whether event has sponsor"
    },
    "sponsor_name": {
      "type": "string",
      "description": "Sponsoring company name"
    },
    "sponsor_logo_url": {
      "type": "string",
      "description": "Sponsor logo URL"
    },
    "status": {
      "type": "string",
      "enum": [
        "upcoming",
        "active",
        "completed",
        "cancelled"
      ],
      "default": "upcoming",
      "description": "Event status"
    }
  },
  "required": [
    "title",
    "date",
    "meeting_point",
    "organizer_id"
  ]
}